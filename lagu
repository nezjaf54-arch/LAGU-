
import time
import sys

def ketik(teks, delay=0.1):
    for huruf in teks:
        print(huruf, end='', flush=True)
        time.sleep(delay)
    print()

def tampilkan_lirik(lirik):
    for baris in lirik:
        ketik(baris)
        time.sleep(2)

